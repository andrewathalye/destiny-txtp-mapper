with "../vgmstream-ada/vgmstream.gpr";

project Search is
	for Languages use ("ada");

	for Source_Dirs use ("src");
	for Main use ("search.adb");
	for Exec_Dir use ".";
	for Object_Dir use "obj";

	package Compiler is
		for Switches ("Ada") use ("-gnatVa", "-gnatwa", "-O2");
	end Compiler;

	package Binder is
		for Switches ("Ada") use ("-shared");
	end Binder;
end Search;
