project Search is
	for Languages use ("ada");

	for Source_Dirs use ("src", "../vgmstream-ada/src");
	for Main use ("search.adb");
	for Exec_Dir use ".";
	for Object_Dir use "obj";

	package Compiler is
		for Switches ("Ada") use ("-gnatVa", "-gnatwa", "-O2");
	end Compiler;

	package Binder is
		for Switches ("Ada") use ("-shared");
	end Binder;

	package Linker is
		for Switches ("Ada") use ("-L../vgmstream-ada/ext", "-lvgmstream", "-lm", "-lvorbis", "-lvorbisfile");
	end Linker;
end Search;
