project Cleaner is
	for Source_Dirs use ("src");
	for Object_Dir use "obj";
	for Exec_dir use ".";
	for Main use ("cleaner.adb");

	package Compiler is
		for Switches ("Ada") use ("-gnatVa", "-gnatwa", "-O2");
	end Compiler;

	package Binder is
		for Switches ("Ada") use ("-shared");	
	end Binder;
end Cleaner;
